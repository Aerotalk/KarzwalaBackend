{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for LoanInNeed digital lending platform, providing secure and scalable services including credit score evaluation, EMI calculations, content management, and visitor analytics using Node.js, Express, and PostgreSQL.",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "server.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:healthcheck": "node scripts/test-healthcheck.js",
    "build": "npm ci && npx prisma generate",
    "migrate": "npx prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "docker:build": "docker build -t loaninneed-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env loaninneed-backend",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "lint:format": "npm run lint:fix && npm run format"
  },
  "jest": {
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./reports",
          "filename": "test-report.html",
          "expand": true,
          "pageTitle": "LoanInNeed Backend API Test Report"
        }
      ]
    ]
  },
  "author": "Priyanshu Routh",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "@supabase/supabase-js": "^2.76.1",
    "axios": "^1.13.5",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10",
    "twilio": "^4.23.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "faker": "^5.5.3",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "prettier": "^3.2.5",
    "prisma": "^6.16.1",
    "sonarqube-scanner": "^4.3.2",
    "supertest": "^7.1.4"
  }
}
